<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.arduino">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".ArduinoApp"
        android:networkSecurityConfig="@xml/network_security_config"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Material3.DayNight.NoActionBar">

        <!-- Splash Screen / Launcher Activity -->
        <activity
            android:name=".SplasherActivity"
            android:theme="@style/Theme.HeartSense.Splash"
            android:exported="true">
            <intent-filter>
                <!-- FIXED TYPO: "android" was written as "and roid" -->
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Authentication Activities -->
        <activity
            android:name=".AuthActivity"
            android:theme="@style/Theme.HeartSense"
            android:exported="true"/>

        <activity
            android:name=".DashboardActivity"
            android:theme="@style/Theme.HeartSense"
            android:exported="true"/>

        <activity
            android:name=".HealthScoreActivity"
            android:theme="@style/Theme.HeartSense"
            android:exported="true"/>

        <activity
            android:name=".HomeActivity"
            android:theme="@style/Theme.HeartSense"
            android:exported="true"/>


        <activity
            android:name=".HealthScoreDetailed"
            android:theme="@style/Theme.HeartSense"
            android:exported="true"/>

        <activity
            android:name=".TimerActivity"
            android:theme="@style/Theme.HeartSense"
            android:exported="true"/>

        <activity
            android:name=".TimeDomainFeaturesActivity"
            android:theme="@style/Theme.HeartSense"
            android:exported="true"/>

        <activity
            android:name=".SignUpActivity"
            android:theme="@style/Theme.HeartSense"
            android:exported="true"/>

        <activity
            android:name=".LoginActivity"
            android:theme="@style/Theme.HeartSense"
            android:exported="true"/>

        <activity
            android:name=".ForgotPasswordActivity"
            android:theme="@style/Theme.HeartSense"
            android:exported="true"/>

        <activity
            android:name=".NewPasswordActivity"
            android:theme="@style/Theme.HeartSense"
            android:exported="true"/>

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.Material3.DayNight.NoActionBar"
            android:exported="true"/>

    </application>
</manifest>
